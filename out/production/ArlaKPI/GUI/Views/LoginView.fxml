<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="1080.0" maxWidth="1920.0" minHeight="235.0" minWidth="300.0" prefHeight="720.0" prefWidth="1270.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.LoginViewController">
   <center>
      <VBox fillWidth="false" maxHeight="235.0" maxWidth="300.0" minHeight="235.0" minWidth="300.0" prefHeight="235.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Login:">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <TextField fx:id="loginField" maxHeight="40.0" maxWidth="300.0" minHeight="40.0" minWidth="300.0" prefHeight="40.0" prefWidth="300.0">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" text="Password:">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" maxHeight="40.0" maxWidth="300.0" minHeight="40.0" minWidth="300.0" prefHeight="40.0" prefWidth="300.0">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleLoginButton" text="Login">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
